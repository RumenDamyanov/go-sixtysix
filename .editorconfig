# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go source: use tabs (gofmt default), keep trailing space trimming
[*.go]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

# Markdown: prefer spaces, don't strip trailing spaces (can mean line breaks)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# Makefiles keep tabs
[Makefile]
indent_style = tab
